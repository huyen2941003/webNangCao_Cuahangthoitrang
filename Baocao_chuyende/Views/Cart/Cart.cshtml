@model Baocao_chuyende.Controllers.CartController.CartViewModel
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/LayoutHF.cshtml";
}

@section HeaderContent {
    <li class="list-menu">
        <a href="#">Sản Phẩm</a>
        <div class="list-menu-hover">
            <ul>
                <h4>Brands</h4>
                @foreach (var brand in Model.Brands)
                {
                    <li>
                        @Html.ActionLink(brand.nameBrands, "SearchByBrand", "Product", new { brandName = brand.nameBrands }, null)
                    </li>
                }
            </ul>
            <ul>
                <h4>Danh mục</h4>
                @foreach (var category in Model.Categories)
                {
                    <li>
                        @Html.ActionLink(category.nameCategory, "SearchByCategory", "Product", new { categoryName = category.nameCategory }, null)
                    </li>
                }
            </ul>
            @foreach (var category in Model.Categories)
            {
                <ul>
                    <h4>@category.nameCategory</h4>
                    @foreach (var typeproduct in Model.TypeProducts.Where(tp => tp.idCategory == category.id))
                    {
                        <li>
                            @Html.ActionLink(typeproduct.nameType, "SearchByCategoryAndType", "Product", new { categoryId = category.id, typeProductId = typeproduct.id }, null)
                        </li>
                    }
                </ul>
            }
        </div>
    </li>
    <li class="list-menu">
        <a href="#">Brands</a>
        <div class="list-menu-hover">
            <ul>
                <h4>Brands</h4>
                @foreach (var brand in Model.Brands)
                {
                    <li>
                        @Html.ActionLink(brand.nameBrands, "SearchByBrand", "Product", new { brandName = brand.nameBrands }, null)
                    </li>
                }
            </ul>
            <ul>
                <h4>Danh mục</h4>
                @foreach (var category in Model.Categories)
                {
                    <li>
                        @Html.ActionLink(category.nameCategory, "SearchByCategory", "Product", new { categoryName = category.nameCategory }, null)
                    </li>
                }
            </ul>
            @foreach (var category in Model.Categories)
            {
                <ul>
                    <h4>@category.nameCategory</h4>
                    @foreach (var typeproduct in Model.TypeProducts.Where(tp => tp.idCategory == category.id))
                    {
                        <li>
                            @Html.ActionLink(typeproduct.nameType, "SearchByCategoryAndType", "Product", new { categoryId = category.id, typeProductId = typeproduct.id }, null)
                        </li>
                    }
                </ul>
            }
        </div>
    </li>
}
<link href="~/assest/css/bootstrap.css" rel="stylesheet" />
<link href="~/assest/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/assest/css/flexslider.css" rel="stylesheet" />
<link href="~/assest/css/style.css" rel="stylesheet" />
<main>
    <div class="container_fullwidth">
        <div class="container shopping-cart">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title">
                        Shopping Cart
                    </h3>
                    <div class="clearfix">
                    </div>
                    <table class="shop-table">
                        <thead>
                            @foreach (var cartItem in Model.Carts)
                            {
                                <tr>
                                    <td>
                                        <img src="@cartItem.ProductDetails.image" alt="Product Image">
                                    </td>
                                    <td>
                                        <div class="shop-details">
                                            <div class="productname">
                                                @cartItem.ProductDetails.nameProduct
                                            </div>
                                            <!-- Các thông tin khác về sản phẩm -->
                                        </div>
                                    </td>
                                    <td>
                                        <h5>
                                            $@cartItem.ProductDetails.price
                                        </h5>
                                    </td>
                                    <td>
                                        <select name="quantity">
                                            <!-- Tùy chọn số lượng sản phẩm -->
                                            <!-- Bạn có thể sử dụng @cartItem.Quantity để đặt giá trị mặc định -->
                                        </select>
                                    </td>
                                    <td>
                                        <h5>
                                            <strong class="red">
                                                $@(cartItem.price * cartItem.Quantity)
                                            </strong>
                                        </h5>
                                    </td>
                                    <td>
                                        <a href="#">
                                            <img src="images/remove.png" alt="Remove">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="images/products/small/products-06.png" alt="">
                                </td>
                                <td>
                                    <div class="shop-details">
                                        <div class="productname">
                                            Lincoln Corner Unit Products
                                        </div>
                                        <p>
                                            <img alt="" src="images/star.png">
                                            <a class="review_num" href="#">
                                                02 Review(s)
                                            </a>
                                        </p>
                                        <div class="color-choser">
                                            <span class="text">
                                                Product Color :
                                            </span>
                                            <ul>
                                                <li>
                                                    <a class="black-bg " href="#">
                                                        black
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="red-bg" href="#">
                                                        light red
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <p>
                                            Product Code :
                                            <strong class="pcode">
                                                Dress 120
                                            </strong>
                                        </p>
                                    </div>
                                </td>
                                <td>
                                    <h5>
                                        $200.00
                                    </h5>
                                </td>
                                <td>
                                    <select name="">
                                        <option selected value="1">
                                            1
                                        </option>
                                        <option value="1">
                                            2
                                        </option>
                                        <option value="1">
                                            3
                                        </option>
                                    </select>
                                </td>
                                <td>
                                    <h5>
                                        <strong class="red">
                                            $200.00
                                        </strong>
                                    </h5>
                                </td>
                                <td>
                                    <a href="#">
                                        <img src="images/remove.png" alt="">
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <button class="pull-left">
                                        Continue Shopping
                                    </button>
                                    <button class=" pull-right">
                                        Update Shopping Cart
                                    </button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="shippingbox">
                                <h5>
                                    Estimate Shipping And Tax
                                </h5>
                                <form>
                                    <label>
                                        Select Country *
                                    </label>
                                    <select class="">
                                        <option value="AL">
                                            Alabama
                                        </option>
                                    </select>
                                        <label>
                                            State / Province *
                                        </label>
                                        <label>
                                            Zip / Post Code *
                                        </label>
                                        <div class="clearfix">
                                        </div>
                                        <button>
                                            Get A Qoute
                                        </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="shippingbox">
                                <h5>
                                    Discount Codes
                                </h5>
                                <form>
                                    <label>
                                        Enter your coupon code if you have one
                                    </label>
                                    <input type="text" name="">
                                    <div class="clearfix">
                                    </div>
                                    <button>
                                        Get A Qoute
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="shippingbox">
                                <div class="subtotal">
                                    <h5>
                                        Sub Total
                                    </h5>
                                    <span>
                                        $1.000.00
                                    </span>
                                </div>
                                <div class="grandtotal">
                                    <h5>
                                        GRAND TOTAL
                                    </h5>
                                    <span>
                                        $1.000.00
                                    </span>
                                </div>
                                <button>
                                    Process To Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </div>
</main>
<script src="~/assest/js/jquery-1.10.2.min.js"></script>
<script src="~/assest/js/bootstrap.min.js"></script>
<script src="~/assest/js/jquery.flexslider.js"></script>
<script src="~/assest/js/jquery.carouFredSel-6.2.1-packed.js"></script>
<script src="~/assest/js/script.min.js"></script>