@model Baocao_chuyende.Areas.Admin.Controllers.SizeColorController.SizeColorViewModel
@{
    ViewBag.Title = "SizeAndColor";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sản phẩm /</span> Chi tiết sản phẩm</h4>
    <!-- Basic Bootstrap Table -->

    <div class="card">
        <h5 class="card-header">Danh sách các loại màu</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã màu
                        </th>
                        <th>
                            Tên màu
                        </th>
                        <th>
                            Chức năng
                        </th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model.Colors)
                    {
                        <tr>
                            <td>
                                @item.id
                            </td>
                            <td>
                                @item.nameColor
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("EditColor", "SizeColor", new { id = item.id })"><i class="bx bx-edit-alt me-1"></i> Chỉnh sửa</a>
                                        <a class="dropdown-item" href="@Url.Action("DeleteColor", "SizeColor", new { id = item.id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>

<hr class="my-5" />

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Danh sách chi tiết sản phẩm</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã size
                        </th>
                        <th>
                            Tên size
                        </th>
                        <th>
                            Chức năng
                        </th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model.Sizes)
                    {
                        <tr>
                            <td>
                                @item.id
                            </td>
                            <td>
                                @item.nameSize
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("EditSize", "SizeColor", new { id = item.id })"><i class="bx bx-edit-alt me-1"></i> Chỉnh sửa</a>
                                        <a class="dropdown-item" href="@Url.Action("DeleteSize", "SizeColor", new { id = item.id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="buy-now">
    <a href="@Url.Action("CreateSize", "SizeColor")" class="btn btn-danger btn-buy-now" style="margin-right: 150px">Thêm size mới</a>
    <a href="@Url.Action("CreateColor", "SizeColor")" class="btn btn-danger btn-buy-now">Thêm màu mới</a>
</div>