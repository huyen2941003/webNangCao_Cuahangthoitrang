@using PagedList;
@using PagedList.Mvc
@model IPagedList<Baocao_chuyende.Models.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Loại sản phẩm /</span> Phân loại</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Phân loại sản phẩm</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <!-- Tiêu đề của bảng -->
                    <tr>
                        <th>ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Cost</th>
                        <th>Price</th>
                        <th>Sale Off</th>
                        <th>Inventory</th>
                        <th>Thương hiệu</th>
                        <th>Danh mục</th>
                        <th>Loại sản phẩm</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    <!-- Hiển thị dữ liệu từ phân trang -->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.nameProduct</td>
                            <td>@string.Format("{0:#,0}", item.cost)</td>
                            <td>@string.Format("{0:#,0}", item.price)</td>
                            <td>@item.saleoff</td>
                            <td>@item.inventory</td>
                            <td>@item.Brand.nameBrands</td>
                            <td>@item.Category.nameCategory</td>
                            <td>@item.TypeProduct.nameType</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Product", new { id = item.id })"><i class="bx bx-edit-alt me-1"></i> Chỉnh sửa</a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Product", new { id = item.id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
    <!-- Hiển thị phân trang -->
    <div style="text-align: center; margin: 30px">
        @Html.PagedListPager(Model, page => Url.Action("Product", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
    </div>
    <style>
        /* CSS cho các số trang */
        .pagination a {
            font-size: 20px;
            margin: 10px;
            padding: 10px 15px;
            border-radius: 10px;
        }
    </style>
    <div class="buy-now">
        <a href="@Url.Action("Create", "Product")" class="btn btn-danger btn-buy-now">Thêm mới</a>
    </div>
</div>