@model Baocao_chuyende.Models.VideoHome

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Danh mục/</span> Thêm danh mục</h4>

    <!-- Basic Layout & Basic with Icons -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <!-- Basic Layout -->
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Thêm danh mục</h5>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-name">@Html.LabelFor(model => model.text)</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.text, new { @class = "form-control", @id = "basic-default-name", @placeholder = "Nhập mô tả", rows = 4 })
                                    @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-name">@Html.LabelFor(model => model.urlVideo)</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.urlVideo, new { htmlAttributes = new { @class = "form-control", @id = "basic-default-name", @placeholder = "Nhập tên danh mục" } })
                                    @Html.ValidationMessageFor(model => model.urlVideo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="buy-now">
    <a href="@Url.Action("Category", "Category")" class="btn btn-danger btn-buy-now">Quay lại</a>
</div>
