@model IEnumerable<Baocao_chuyende.Models.VideoHome>

@{
    ViewBag.Title = "VideoHome";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Loại sản phẩm /</span> Danh mục</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Danh mục sản phẩm</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã video
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Link youtube
                        </th>
                        <th>
                            Chức năng
                        </th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> @Html.DisplayFor(modelItem => item.id)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.text)</td>
                            <td>@Html.DisplayFor(modelItem => item.urlVideo)</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Video", new { id = item.id })"><i class="bx bx-edit-alt me-1"></i> Chỉnh sửa</a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Video", new { id = item.id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <div class="buy-now">
        <a href="@Url.Action("Create", "Video")" class="btn btn-danger btn-buy-now">Thêm mới</a>
    </div>
</div>
